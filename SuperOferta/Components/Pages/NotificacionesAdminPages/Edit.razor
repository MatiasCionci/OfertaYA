@page "/notificacionesadmins/edit"
@using Microsoft.EntityFrameworkCore
@using SuperOferta.Models
@inject SupermercadoContext context
@inject NavigationManager NavigationManager

<PageTitle>Edit</PageTitle>

<h1>Edit</h1>

<h2>NotificacionesAdmin</h2>
<hr />
@if (NotificacionesAdmin is null)
{
    <p><em>Loading...</em></p>
}
else
{
    <div class="row">
        <div class="col-md-4">
            <EditForm method="post" Model="NotificacionesAdmin" OnValidSubmit="UpdateNotificacionesAdmin" FormName="edit" Enhance>
                <DataAnnotationsValidator />
                <ValidationSummary role="alert"/>
                <input type="hidden" name="NotificacionesAdmin.Id" value="@NotificacionesAdmin.Id" />
                <button type="submit" class="btn btn-primary">Save</button>
            </EditForm>
        </div>
    </div>
}

<div>
    <a href="/notificacionesadmins">Back to List</a>
</div>

@code {
    [SupplyParameterFromQuery]
    private int Id { get; set; }

    [SupplyParameterFromForm]
    private NotificacionesAdmin? NotificacionesAdmin { get; set; }

    protected override async Task OnInitializedAsync()
    {
        
        NotificacionesAdmin ??= await context.NotificacionesAdmin.FirstOrDefaultAsync(m => m.Id == Id);

        if (NotificacionesAdmin is null)
        {
            NavigationManager.NavigateTo("notfound");
        }
    }

    // To protect from overposting attacks, enable the specific properties you want to bind to.
    // For more information, see https://learn.microsoft.com/aspnet/core/blazor/forms/#mitigate-overposting-attacks.
    private async Task UpdateNotificacionesAdmin()
    {
        context.Attach(NotificacionesAdmin!).State = EntityState.Modified;

        try
        {
            await context.SaveChangesAsync();
        }
        catch (DbUpdateConcurrencyException)
        {
            if (!NotificacionesAdminExists(NotificacionesAdmin!.Id))
            {
                NavigationManager.NavigateTo("notfound");
            }
            else
            {
                throw;
            }
        }

        NavigationManager.NavigateTo("/notificacionesadmins");
    }

    private bool NotificacionesAdminExists(int id)
    {
        
        return context.NotificacionesAdmin.Any(e => e.Id == id);
    }
}
